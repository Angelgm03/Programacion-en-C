#include <stdio.h>
#include <math.h>

int main(void) {
	int a,b,div,pot;
  printf ("Indica el valor del primer número: \n");
  scanf ("%d", &a);
  printf ("Indica el valor del segundo número: \n");
  scanf ("%d", &b);
  div=a/b;
  printf("La división de los dos números es: %d \n",div);
  pot=pow(a,b);
  printf("Ahora elevados es: %d \n", pot);
  return 0;
}
