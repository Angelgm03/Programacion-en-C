#include <stdio.h>
#include <math.h>

int main(void) {
	float a,b,div,pot;
  printf ("Indica el valor del primer número: \n");
  scanf ("%f", &a);
  printf ("Idica el valor del segundo número: \n");
  scanf ("%f", &b);
  div=a/b;
  printf(" La división de los dos números es %f \n",div);
  pot=pow(a,b);
  printf(" Ahora al elevarlos el resultado es %f \n", pot);
  return 0;
}
